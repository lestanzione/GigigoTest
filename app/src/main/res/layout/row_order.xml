<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/orderItemLayout"
    android:padding="8dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/orderItemTotalPriceTextView"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Order Item Total Price"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderItemDateTextView"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="09/11/2018"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/orderItemNameTextView"
        android:textSize="14sp"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/orderItemTotalPriceTextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Cart Item Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderItemNumberTextView"
        android:textSize="14sp"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/orderItemNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="************2222"/>

</android.support.constraint.ConstraintLayout>